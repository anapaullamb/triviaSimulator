<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuperTriviaSimulator" parent="Theme.MaterialComponents.DayNight.DarkActionBar"></style>

    <style name="Theme.AppCompat.Light.Fullscreen" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.AppCompat.Light.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.SuperTriviaSimulator.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>